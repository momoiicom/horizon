{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-content-grid-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: 40px 20px;
  }

  .ai-content-grid__heading-{{ ai_gen_id }} {
    text-align: center;
    margin: 0 0 40px;
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
  }

  .ai-content-grid__container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-content-grid__item-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.item_gap }}px;
    align-items: flex-start;
    padding: {{ block.settings.item_padding }}px;
    background-color: {{ block.settings.item_background }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-content-grid__image-wrapper-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.image_width }}px;
    height: {{ block.settings.image_width }}px;
  }

  .ai-content-grid__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-content-grid__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-content-grid__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
  }

  .ai-content-grid__content-{{ ai_gen_id }} {
    flex: 1;
    min-width: 0;
  }

  .ai-content-grid__title-{{ ai_gen_id }} {
    margin: 0 0 12px;
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
  }

  .ai-content-grid__text-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
  }

  @media screen and (max-width: 749px) {
    .ai-content-grid__container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-content-grid__item-{{ ai_gen_id }} {
      flex-direction: {{ block.settings.mobile_layout }};
    }

    .ai-content-grid__image-wrapper-{{ ai_gen_id }} {
      width: {{ block.settings.mobile_image_width }}px;
      height: {{ block.settings.mobile_image_width }}px;
    }
  }
{% endstyle %}

<div class="ai-content-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.main_heading != blank %}
    <h2 class="ai-content-grid__heading-{{ ai_gen_id }}">{{ block.settings.main_heading }}</h2>
  {% endif %}

  <div class="ai-content-grid__container-{{ ai_gen_id }}">
    {% for i in (1..4) %}
      {% liquid
        assign image_key = 'image_' | append: i
        assign title_key = 'title_' | append: i
        assign text_key = 'text_' | append: i

        assign item_image = block.settings[image_key]
        assign item_title = block.settings[title_key]
        assign item_text = block.settings[text_key]
      %}

      <div class="ai-content-grid__item-{{ ai_gen_id }}">
        <div class="ai-content-grid__image-wrapper-{{ ai_gen_id }}">
          {% if item_image %}
            <img
              src="{{ item_image | image_url: width: 400 }}"
              alt="{{ item_image.alt | escape }}"
              class="ai-content-grid__image-{{ ai_gen_id }}"
              loading="lazy"
              width="400"
              height="400"
            >
          {% else %}
            <div class="ai-content-grid__image-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </div>

        <div class="ai-content-grid__content-{{ ai_gen_id }}">
          {% if item_title != blank %}
            <h3 class="ai-content-grid__title-{{ ai_gen_id }}">{{ item_title }}</h3>
          {% endif %}
          {% if item_text != blank %}
            <div class="ai-content-grid__text-{{ ai_gen_id }}">{{ item_text }}</div>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</div>

